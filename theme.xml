<theme>
	<include>./_inc/systems/metadata-global/_default.xml</include>
	<include>./_inc/systems/metadata-global/${system.theme}.xml</include>
	<include>./_inc/coversize-basic-grid-variables/${systemCoverSize}.xml</include>
	<include>./variables.xml</include>
	<include>./view_system.xml</include>
	<include>./view_grid.xml</include>


	<!--Hide help-->
	<view name="system,gamelist">
		<helpsystem name="help">
			<origin>0.5 1</origin>
			<pos>0.5 0.99</pos>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<opacity>0.7</opacity>
			<fontPath>${font_path}</fontPath>
			<fontSize>0.02</fontSize> 
		</helpsystem>
		<systemstatus name="systemstatus">
			<origin>0 0</origin>
			<pos>0.07 0.005</pos>
			<fontPath>${font_path}</fontPath>
			<height>0.025</height> 
			<color>ADADAD</color>
		</systemstatus>
		<clock name="clock">
			<origin>0 0</origin>
			<pos>0.005 0.005</pos>
			<fontPath>${font_path}</fontPath>
			<fontSize>0.025</fontSize> 
			<color>ADADAD</color>
		</clock>
	</view>

</theme>